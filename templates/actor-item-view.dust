<div class="col s12 m4 l3">
  <div class="card">
    <div class="card-image">
      <img src="{actor_avator}">
      <span class="card-title blue truncate">{actor_name}</span>
    </div>
    <div class="card-content">
      <p class="truncate">{activity_message}</p>
    </div>
    <div class="card-action">
      <a class="waves-effect waves-light btn trigger-modal white-text blue" href="#modal{id}" data-target="modal{id}">More info</a>
    </div>
  </div>
</div>